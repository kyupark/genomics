using namespace FIP;
using namespace std;

int main(int argc, char *argv[]) {
	if (argc != 2) {
		cerr << "usage:\t" << argv[0] << " <bam_file_name> <ref_file_name>" << endl;
		return 1;
	}

	string tp_file_name = argv[1]; // string bam_file_name = "/home/el114/kyu/data/test.bam";
	string wes_file_name = argv[2]; //"/home/el114/kyu/data/bwa_idx/human_youngTE_revisedPolyA.fa";

	run(tp_file_name, wes_file_name);


	return 0;
}
